<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="1000dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTituloTab"
            android:layout_width="1000dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/titTabVisitas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

    </LinearLayout>
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:orientation="horizontal" >

	<TextView
	    android:id="@+id/txtCodViv"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal|center"
	    android:layout_marginRight="90dp"
	    android:layout_marginTop="5dp"
	    android:clickable="false"
	    android:text="@string/codViv"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="30sp"
	    android:textStyle="normal" />
	
	<TextView
	    android:id="@+id/txtFecha"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal|center"
	    android:layout_marginRight="90dp"
	    android:layout_marginTop="5dp"
	    android:clickable="false"
	    android:text="@string/txtFecha"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="30sp"
	    android:textStyle="normal" />
	
	<TextView
	    android:id="@+id/txtMotivos"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_horizontal|center"
	    android:layout_marginRight="60dp"
	    android:layout_marginTop="5dp"
	    android:clickable="false"
	    android:text="@string/txtMotivos"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="30sp"
	    android:textStyle="normal" />
	
		<TextView
		    android:id="@+id/txtAccion"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal|center"
		    android:layout_marginRight="90dp"
		    android:layout_marginTop="5dp"
		    android:clickable="false"
		    android:text="@string/txtAccion"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="30sp"
		    android:textStyle="normal" />

    </LinearLayout>
    
    <TableRow android:id="@+id/tableOptions" >

        <GridView
            android:id="@+id/tablaVisitas"
            android:layout_width="1000dp"
            android:layout_height="450dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="90dp"
            android:columnWidth="150dp"
            android:gravity="center_horizontal"
            android:horizontalSpacing="10dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >

        </GridView>
        
    </TableRow>
    
    
    <TableRow
        android:id="@+id/tableButtons"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/readyButton"
            style="@style/AppTheme"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/txtListo" />

    </TableRow>
 
</TableLayout> 
